\ProvidesPackage{prisma-flow-diagram}[2025/01/20 PRISMA Flow Diagram Generator]

\RequirePackage{tikz}
\usetikzlibrary{positioning, calc, chains, arrows.meta}

% Define TikZ styles
\tikzset{
    prisma-node/.style={draw, rectangle, align=center, minimum height=2em, text width=5cm, font=\small},
    prisma-arrow/.style={thick,->,>=stealth},
    prisma-label/.style={font=\bfseries, rotate=90},
}

% Command to start a PRISMA diagram
\newcommand{\prismaflowstart}{
    \begin{tikzpicture}[
        node distance=5mm and 10mm,
        start chain=going below
    ]
}

% Command to add a node
\newcommand{\prismaflownode}[3]{
    \node[prisma-node, #2] (#1) {#3};
}

% Command to draw an arrow
\newcommand{\prismaflowarrow}[2]{
    \draw[prisma-arrow] (#1) -- (#2);
}

% Command to end a PRISMA diagram
\newcommand{\prismaflowend}{
    \end{tikzpicture}
}